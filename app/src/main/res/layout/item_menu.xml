<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="@dimen/marginXXSmall"
        android:layout_marginTop="@dimen/marginXXSmall"
        android:layout_marginBottom="24dp"
        android:background="@drawable/item_menu_bg"
        android:elevation="@dimen/elevation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/item_menu_image_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <View
            android:id="@+id/favouriteIndicator"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/item_menu_favourite_bg"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/favouriteButton"
            app:layout_constraintEnd_toEndOf="@id/favouriteButton"
            app:layout_constraintStart_toStartOf="@id/favouriteButton"
            app:layout_constraintTop_toTopOf="@id/favouriteButton" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/favouriteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="10dp"
                android:alpha=".25"
                android:background="@drawable/icon_heart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginXXSmall"
            android:text="Название"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/itemImage" />
        <TextView
            android:id="@+id/itemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginXXSmall"
            android:text="Р 460"
            android:textColor="@color/gold_200"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/itemName" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.otuscoursework.view.expandable_button.ExpandableButton
        android:id="@+id/expandableButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/elevation"
        android:layout_marginEnd="@dimen/marginXXSmall"
        android:layout_marginBottom="@dimen/marginXXSmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>