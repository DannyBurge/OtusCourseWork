<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/marginXXSmall"
    android:paddingVertical="@dimen/marginXXXSmall"
    android:elevation="@dimen/elevation"
    android:background="@drawable/card_panel_bg">

    <TextView
        android:id="@+id/showOptionsShowFavouriteOption"
        style="@style/ShowOptions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/showOptionsShowFavourite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/showOptionsShowAllOption"
        style="@style/ShowOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/showOptionsShowAll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/showOptionsShowFavouriteOption" />
</androidx.constraintlayout.widget.ConstraintLayout>