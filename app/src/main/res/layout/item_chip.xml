<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/card_panel_bg"
    android:layout_margin="@dimen/marginXXXSmall"
    android:elevation="@dimen/elevation">

    <View
        android:id="@+id/selectedIndicator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/card_panel_bg"
        android:backgroundTint="@color/gold_200"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/chipCategoryName"
        app:layout_constraintEnd_toEndOf="@id/chipCategoryName"
        app:layout_constraintStart_toStartOf="@id/chipCategoryName"
        app:layout_constraintTop_toTopOf="@id/chipCategoryName" />

    <TextView
        android:id="@+id/chipCategoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingHorizontal="@dimen/marginSmall"
        android:paddingVertical="@dimen/marginXXSmall"
        android:text="Пицца"
        android:textColor="@color/black"
        android:textSize="@dimen/textSmallSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>