<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Round button styles-->
    <style name="RoundButton">
        <item name="android:background">@drawable/bg_round_button</item>
        <item name="android:backgroundTint">@color/white_transparent_25</item>
<!--        <item name="android:clickable">true</item>-->
<!--        <item name="android:focusable">true</item>-->
    </style>

    <style name="RoundButton.Dark">
        <item name="android:backgroundTint">@color/black_transparent_5</item>
    </style>

    <style name="RoundButtonIcon">
        <item name="tint">@color/black_transparent_25</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="RoundButtonDarkXLarge" parent="RoundButton.Dark">
        <item name="android:layout_width">@dimen/roundButtonBgSizeXLarge</item>
        <item name="android:layout_height">@dimen/roundButtonBgSizeXLarge</item>
    </style>

    <style name="RoundButtonXXLarge" parent="RoundButton">
        <item name="android:layout_width">@dimen/roundButtonBgSizeXXLarge</item>
        <item name="android:layout_height">@dimen/roundButtonBgSizeXXLarge</item>
    </style>

    <style name="RoundButtonIcon.Small">
        <item name="android:layout_width">@dimen/roundButtonIconSizeSmall</item>
        <item name="android:layout_height">@dimen/roundButtonIconSizeSmall</item>
    </style>

    <style name="RoundButtonIcon.Medium">
        <item name="android:layout_width">@dimen/roundButtonIconSizeMedium</item>
        <item name="android:layout_height">@dimen/roundButtonIconSizeMedium</item>
    </style>

    <!--Text styles-->
    <style name="MainTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TitleText" parent="MainTextStyle">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SubTitleText" parent="MainTextStyle">
        <item name="android:textSize">27sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ShowOptions" parent="MainTextStyle">
        <item name="android:textSize">@dimen/textXSmallSize</item>
    </style>

    <style name="Base.Theme.App" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="bottomSheetStyle">@style/StandardBottomSheet</item>
    </style>

    <style name="StandardBottomSheet">
        <item name="behavior_hideable">true</item>
        <item name="behavior_draggable">true</item>
        <item name="behavior_skipCollapsed">false</item>
        <item name="behavior_fitToContents">true</item>
        <item name="behavior_peekHeight">200dp</item>
        <item name="state_collapsed">true</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
    </style>
</resources>