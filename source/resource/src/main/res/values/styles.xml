<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Text-->
    <style name="MainTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TitleText" parent="MainTextStyle">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SubTitleText" parent="MainTextStyle">
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BigText" parent="MainTextStyle">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MediumText" parent="MainTextStyle">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="SmallText" parent="MainTextStyle">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <!--Button-->
    <style name="ButtonStyle" parent="MediumText">
        <item name="android:background">@drawable/bg_button</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonStyleRed" parent="ButtonStyle">
        <item name="backgroundTint">@color/coral_200</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyleGold" parent="ButtonStyle">
        <item name="backgroundTint">@color/gold_200</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyleTransparent" parent="ButtonStyle">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Round button-->
    <style name="RoundButtonStyle">
        <item name="android:layout_width">@dimen/main_size_48</item>
        <item name="android:layout_height">@dimen/main_size_48</item>
        <item name="android:background">@drawable/bg_round_button</item>
        <item name="android:backgroundTint">@color/black_transparent_5</item>
    </style>

    <style name="RoundButtonIcon">
        <item name="android:layout_width">@dimen/main_size_24</item>
        <item name="android:layout_height">@dimen/main_size_24</item>
        <item name="tint">@color/black_transparent_25</item>
    </style>

    <!--Progress Dialog-->
    <style name="ProgressDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>